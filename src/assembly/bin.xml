<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>JbrMmgAngular</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>dist/JbrMmg</directory>
            <outputDirectory>deploy</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <fileMode>0775</fileMode>
            <filtered>false</filtered>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${project.build.directory}/scripts/deploy/BlankDeploy.sh</source>
            <outputDirectory>/</outputDirectory>
            <destName>pre_deploy.sh</destName>
            <fileMode>0775</fileMode>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${project.build.directory}/scripts/deploy/BlankDeploy.sh</source>
            <outputDirectory>/</outputDirectory>
            <destName>post_deploy.sh</destName>
            <fileMode>0775</fileMode>
            <filtered>true</filtered>
        </file>
        <file>
            <source>${basedir}/src/deployment/release.txt</source>
            <outputDirectory>/</outputDirectory>
            <destName>maven-releases-DeploymentDir.txt</destName>
            <fileMode>0664</fileMode>
        </file>
        <file>
            <source>${basedir}/src/deployment/development.txt</source>
            <outputDirectory>/</outputDirectory>
            <destName>maven-snapshots-DeploymentDir.txt</destName>
            <fileMode>0664</fileMode>
        </file>
    </files>
</assembly>
